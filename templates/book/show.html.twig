{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
    <div class="flex flex-col space-y-5 mt-20">
        <p class="text-3xl">Book</p>
        {% if book is not null %}
            <div>
                <p>Title of book: {{ book.title }}</p>
                <p>Publication date: {{ book.publicationDate | date('F j, Y')  }}</p>
                <p>Author: {{ book.author.username  }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}